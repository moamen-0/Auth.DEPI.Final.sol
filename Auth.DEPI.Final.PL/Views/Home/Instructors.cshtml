@model IEnumerable<InstructorsViewModel>
@{
    ViewData["Title"] = "Instructors";
    ViewData["TopBody"] = "At Online Courses, our professional instructors are the backbone of our educational community. With extensive experience in their respective fields, they are dedicated to providing high-quality, engaging, and practical learning experiences. Our instructors not only share their expertise but also inspire students to reach their full potential. Join us to learn from the best and enhance your skills with guidance from industry professionals!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="HomePartialViews/TopPartialViews"></partial>


<!-- Trainers Section -->
<section id="trainers" class="section trainers">

    <div class="container">

        <div class="row gy-5">

        @if (!(Model.Count() <= 0))
        {
                @foreach(var instructor in Model ){
                    <div class="col-lg-4 col-md-6 member" data-aos="fade-up" data-aos-delay="100">
                        <div class="member-img">
                            <img src="~/files/images/@instructor.Image" class="img-fluid" alt="">

                        </div>
                        <div class="member-info text-center">
                            <h4>@instructor.Name</h4>
                            <p>@instructor.Bio</p>
                        </div>
                    </div>

                    <!-- End Team Member -->
                }
        }
        else
        {
            <div class="alert alert-warning"> There Is No Instructors :(</div>
        }


        </div>

    </div>

</section><!-- /Trainers Section -->

@model ResetPasswordViewModel


@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<form asp-action="ResetPassword" method="post" class="login100-form validate-form">


	<span class="login100-form-title">
		Reset Password 
	</span>


	<div class="wrap-input100 validate-input" data-validate="Password is required">
		<input class="input100" placeholder="Password" asp-for="@Model.Password">
		<span class="focus-input100"></span>
		<span class="symbol-input100">
			<i class="fa fa-lock" aria-hidden="true"></i>
		</span>
	</div>

	<div class="wrap-input100 validate-input" data-validate="Confirm Password is required">
		<input class="input100" placeholder="Confirm Password" asp-for="@Model.ConfirmPassword">
		<span class="focus-input100"></span>
		<span class="symbol-input100">
			<i class="fa fa-lock" aria-hidden="true"></i>
		</span>
	</div>


	<div asp-validation-summary="All" class="text-danger">
	</div>

	<div class="container-login100-form-btn">
		<input type="submit" value="Reset Password" class="login100-form-btn" />
	</div>





</form>




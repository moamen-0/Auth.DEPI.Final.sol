
@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<form asp-action="ForgetPassword" method="post" class="login100-form validate-form" >


	<span class="login100-form-title">
		Forget Password
	</span>


	<div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
		<input class="input100" asp-for="@Model.Email" placeholder="Email You Want To Recover">
		<span class="focus-input100"></span>
		<span class="symbol-input100">
			<i class="fa fa-envelope" aria-hidden="true"></i>
		</span>
	</div>

	<div class="text-danger text-center" asp-validation-summary="All"></div>
    <div class="container-login100-form-btn">
        <input type="submit" value="Send Email" class="login100-form-btn" />

    </div>

	<div class=" text-center p-t-100 ">

		<span> Already Have An Email ? </span>
		<a class="txt2" asp-action="SignIn">
			Login
			<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
		</a>

	</div>
</form>



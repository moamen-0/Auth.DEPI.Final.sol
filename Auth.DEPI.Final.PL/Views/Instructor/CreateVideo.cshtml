@model VideoViewModel

@{
    ViewBag.PageTitle = "Add Video";
    ViewBag.CardTitle = "Add video";
    Layout = "~/Views/Shared/_Dashboard.cshtml";

}





<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewBag.CardTitle</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>




    <div class="card-body">
        <form method="post" asp-action="CreateVideo" enctype="multipart/form-data">
            <input asp-for="CourseId" type="hidden" />

            <div class="row mb-3">
                <label asp-for="Title" class="col-sm-2 col-form-label">Video Title</label>
                <div class="col-sm-10">
                    <input asp-for="Title" type="text" class="form-control" required />
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="CourseVideo" class="col-sm-2 col-form-label">Upload Video</label>
                <div class="col-sm-10">
                    <input type="file" asp-for="CourseVideo" class="form-control" accept="video/*" required />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12 d-flex justify-content-center">
                    <input type="submit" class="btn btn-primary" value="Add Video" />
                    <a asp-action="Index" class="btn btn-warning ms-3" style="margin-left: 20px;">Cancel</a>
                </div>
            </div>
        </form>
    </div>




</div>



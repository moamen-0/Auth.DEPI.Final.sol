@model VideoViewModel

@{
    ViewBag.PageTitle = "Courses Management";
    ViewBag.CardTitle = "Add video";
    Layout = "~/Views/Shared/_Dashboard.cshtml";

}

<h2>Add Video</h2>

<form method="post" asp-action="CreateVideo" enctype="multipart/form-data">
    <input asp-for="CourseId" type="hidden" />

    <div class="row mb-3">
        <label asp-for="Title" class="col-sm-2 col-form-label">Video Title</label>
        <div class="col-sm-10">
            <input asp-for="Title" type="text" class="form-control" required />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="CourseVideo" class="col-sm-2 col-form-label">Upload Video</label>
        <div class="col-sm-10">
            <input type="file" asp-for="CourseVideo" class="form-control" accept="video/*" required />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-center">
            <input type="submit" class="btn btn-primary" value="Add Video"/>
            <a asp-action="Index" class="btn btn-warning ms-3" style="margin-left: 20px;">Cancel</a>
        </div>
    </div>
</form>
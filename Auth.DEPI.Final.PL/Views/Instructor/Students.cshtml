
@model IEnumerable<GetStudentViewModel>

@{
    ViewData["Title"] = "Students";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}



<div class="card">
    <div class="card-header">
        <h3 class="card-title">Students</h3>
    </div>

    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Students</h1>
        </div>

        @if (Model.Count()>0)
        {
            <table class="table table-hover">
                <tr>
                    <td style="text-align: center; vertical-align: middle;">Cover</td>
                    <td style="text-align: center; vertical-align: middle;">Name</td>
                    <td style="text-align: center; vertical-align: middle;">Course Name</td> <!-- New column for Course Name -->
                    <td style="text-align: center; vertical-align: middle;">Id</td>
                </tr>
                @foreach (var student in Model)
                {
                    <tr>
                        <td><img src="~/files/images/@student.Image" width="70" height="70" alt="Student Image" class="img-thumbnail" /></td>
                        <td style="text-align: center; vertical-align: middle;">@student.Name</td>
                        <td style="text-align: center; vertical-align: middle;">@student.CourseName</td> <!-- Display Course Name -->
                        <td style="text-align: center; vertical-align: middle;">@student.Id</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div class="alert alert-warning"> There is No Student Yet :(</div>
        }
    </div>
</div>